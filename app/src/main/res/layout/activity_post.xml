<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageButton
        android:src="@drawable/ic_arrow_back_24px_rounded"
        android:id="@+id/arrowImg"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:background="@android:color/transparent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toTopOf="@id/board"
        app:layout_constraintBottom_toBottomOf="@id/board"
        />

    <TextView
        android:text="OO 게시판"
        android:id="@+id/board"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="40dp"
        app:layout_constraintStart_toEndOf="@id/arrowImg"
        android:layout_marginStart="8dp"
        tools:text="OO 게시판"
        />


<!--    여기부터 네스트스크롤뷰 하면 될 듯-->


    <TextView
        android:text="제목"
        tools:text="제목"
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/board"
        android:layout_marginTop="12dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="28dp"
        />

    <TextView
        android:text="닉네임"
        tools:text="닉네임"
        android:id="@+id/nickname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textStyle="normal"
        android:textColor="@color/black"
        app:layout_constraintTop_toTopOf="@id/title"
        app:layout_constraintBottom_toBottomOf="@id/title"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="28dp"
        />

    <TextView
        android:text="내용내용내용내용내용내용내용내용내용내용내용내용내용내용내용내용내용내용내용내용내용내용내용내용내용내용내용내용내용내용내용내용내용내용내용내용내용내용내용내용내용내용내용내용내용내용내용내용내용내용내용내용내용내용내용내용내용내용내용내용내용내용내용내용내용내용내용내용내용내용내용내용내용내용내용내용내용내용내용내용내용내용내용내용내용내용내용내용내용내용내용내용내용내용내용내용내용내용내용내용내용내용내용내용내용내용내용내용내용내용내용내용내용내용내용내용내용내용내용내용내용내용내용내용내용내용내용내용내용내용내용내용내용내용내용내용내용내용내용내용내용내용내용내용내용내용내용내용내용내용내용내용내용내용내용내용내용내용내용내용내용내용내용내용내용내용내용내용내용내용내용내용내용내용내용내용내용내용내용내용내용내용내용내용내용내용내용내용"
        tools:text="내용내용내용내용내용내용내용내용내용내용내용내용내용내용내용내용내용내용내용내용내용내용내용내용내용내용내용내용내용내용내용내용내용내용내용내용내용내용내용내용내용내용내용내용내용내용내용내용내용내용내용내용내용내용내용내용내용내용내용내용내용내용내용내용내용내용내용내용내용내용내용내용내용내용내용내용내용내용내용내용내용내용내용내용내용내용내용내용내용내용내용내용내용내용내용내용내용내용내용내용내용내용내용내용내용내용내용내용내용내용내용내용내용내용내용내용내용내용내용내용내용내용내용내용내용내용내용내용내용내용내용내용내용내용내용내용내용내용내용내용내용내용내용내용내용내용내용내용내용내용내용내용내용내용내용내용내용내용내용내용내용내용내용내용내용내용내용내용내용내용내용내용내용내용내용내용내용내용내용내용내용내용내용내용내용내용내용내용"
        android:id="@+id/content"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textStyle="normal"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/title"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="@id/title"
        app:layout_constraintEnd_toEndOf="@id/nickname"
        />

    <ImageView
        android:id="@+id/like_img"
        android:src="@drawable/heart_empty"
        android:layout_width="13dp"
        android:layout_height="13dp"
        app:layout_constraintTop_toBottomOf="@id/content"
        android:layout_marginTop="12dp"
        app:layout_constraintStart_toStartOf="@id/content"
        />

    <TextView
        android:text="4"
        android:id="@+id/like_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/red"
        app:layout_constraintTop_toTopOf="@id/like_img"
        app:layout_constraintBottom_toBottomOf="@id/like_img"
        app:layout_constraintStart_toEndOf="@id/like_img"
        android:layout_marginStart="4dp"
        android:textSize="9sp"
        android:textStyle="bold"
        tools:text="4"
        />

    <ImageView
        android:id="@+id/comment_img"
        android:src="@drawable/comment"
        android:layout_width="13dp"
        android:layout_height="13dp"
        app:layout_constraintTop_toTopOf="@id/like_count"
        app:layout_constraintBottom_toBottomOf="@id/like_count"
        app:layout_constraintStart_toEndOf="@+id/like_count"
        android:layout_marginStart="12dp"
        />

    <TextView
        android:text="17"
        android:id="@+id/comment_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/Highlight1"
        app:layout_constraintTop_toTopOf="@id/comment_img"
        app:layout_constraintBottom_toBottomOf="@id/comment_img"
        app:layout_constraintStart_toEndOf="@id/comment_img"
        android:layout_marginStart="4dp"
        android:textSize="9sp"
        tools:text="17"
        />

    <TextView
        android:text="08/03 | 18:32"
        android:id="@+id/date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/Dark4"
        app:layout_constraintTop_toTopOf="@id/comment_count"
        app:layout_constraintBottom_toBottomOf="@id/comment_count"
        app:layout_constraintEnd_toEndOf="@id/content"
        android:textSize="9sp"
        tools:text="08/03 18:32" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/comments"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/like_img"
        android:layout_marginTop="8dp"
        app:layout_constrainedHeight="true"
        app:layout_constraintVertical_bias="0"
        android:nestedScrollingEnabled="false"
    />

<!--    여기까지 네스트 스크롤 뷰 하면 될 듯!
        아래 editText에서 topbottom '네스트스크롤뷰'로 부탁드립니다. -->


    <EditText
        android:id="@+id/get_comment"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp"
        app:layout_constraintBottom_toTopOf="@id/bottom_navigation"
        android:layout_marginBottom="16dp"
        android:background="@drawable/edittext_get_comment"
        android:hint="댓글을 입력하세요."
        android:textColor="@color/fontsColor"
        android:textSize="14sp"
        />

    <ImageButton
        android:layout_width="22dp"
        android:layout_height="11dp"
        app:layout_constraintEnd_toEndOf="@id/get_comment"
        app:layout_constraintTop_toTopOf="@id/get_comment"
        app:layout_constraintBottom_toBottomOf="@id/get_comment"
        android:src="@drawable/bridge"
        android:layout_marginEnd="16dp"
        android:backgroundTint="@color/white"
        />

<!--    </androidx.core.widget.NestedScrollView>-->
    <include layout="@layout/bottom_navigation_board"
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>